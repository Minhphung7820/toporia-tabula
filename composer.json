{
    "name": "toporia/tabula",
    "description": "High-performance Excel/CSV import & export for Toporia Framework - handles millions of rows",
    "keywords": ["toporia", "excel", "csv", "import", "export", "spreadsheet", "large-files", "streaming", "batch-processing"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Phungtruong7820",
            "email": "minhphung485@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "toporia/framework": "^1.0",
        "openspout/openspout": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "phpoffice/phpspreadsheet": "For advanced Excel features (formatting, formulas, etc.)"
    },
    "autoload": {
        "psr-4": {
            "Toporia\\Tabula\\": "src/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Toporia\\Tabula\\Tests\\": "tests/"
        }
    },
    "extra": {
        "toporia": {
            "providers": [
                "Toporia\\Tabula\\TabulaServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
